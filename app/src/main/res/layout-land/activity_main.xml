<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.simone.slambregts_pset1.MainActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/draaier"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"

            android:id="@+id/potato"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1">


            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/bodyview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/body"/>

                <ImageView
                    android:id="@+id/eyesview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/eyes"/>

                <ImageView
                    android:id="@+id/armsview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/arms"/>

                <ImageView
                    android:id="@+id/earsview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ears"/>

                <ImageView
                    android:id="@+id/eyebrowsview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/eyebrows"/>

                <ImageView
                    android:id="@+id/glassesview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/glasses"/>

                <ImageView
                    android:id="@+id/hatview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/hat"/>

                <ImageView
                    android:id="@+id/mouthview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/mouth"/>

                <ImageView
                    android:id="@+id/mustacheview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/mustache"/>

                <ImageView
                    android:id="@+id/noseview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/nose"/>

                <ImageView
                    android:id="@+id/shoesview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/shoes"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/buttons"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="0"
            android:orientation="horizontal">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="0"
                android:orientation="vertical">

                <CheckBox android:id="@+id/checkbox_arms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="arms"

                    android:onClick="onCheckboxClicked"/>

                <CheckBox android:id="@+id/checkbox_ears"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ears"

                    android:onClick="onCheckboxClicked"/>

                <CheckBox android:id="@+id/checkbox_eyebrows"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="eyebrows"
                    android:onClick="onCheckboxClicked"/>

                <CheckBox android:id="@+id/checkbox_eyes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="eyes"
                    android:onClick="onCheckboxClicked"/>

                <CheckBox android:id="@+id/checkbox_glasses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="glasses"
                    android:onClick="onCheckboxClicked"/>


            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="0"
                android:orientation="vertical">

                <CheckBox android:id="@+id/checkbox_hat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hat"
                    android:onClick="onCheckboxClicked"/>

                <CheckBox android:id="@+id/checkbox_mouth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mouth"
                    android:onClick="onCheckboxClicked"/>

                <CheckBox android:id="@+id/checkbox_mustache"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mustache"
                    android:onClick="onCheckboxClicked"/>

                <CheckBox android:id="@+id/checkbox_nose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="nose"
                    android:onClick="onCheckboxClicked"/>

                <CheckBox android:id="@+id/checkbox_shoes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="shoes"
                    android:onClick="onCheckboxClicked"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>